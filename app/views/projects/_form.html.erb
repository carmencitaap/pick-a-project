
<div class="flex flex-col">
      <h2 class="text-3xl font-bold mt-10"> Crear un proyecto </h2>

      <%= form_with model: @project do |f| %>
        <div class="field mb-2">
          <%= f.label :title %><br />
          <%= f.text_field :title, autofocus: true, autocomplete: "email", class:"rounded" %>
        </div>

        <div class="actions">
          <%= f.submit "Publicar", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-4 mb-1" %>
        </div>
      <% end %>

</div>