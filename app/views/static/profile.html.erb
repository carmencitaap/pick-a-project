<!-- app/views/users/show.html.erb -->
<div class="flex justify-center items-center">
  <div class="p-4 max-w-xl">
    <br>

    <h1 class="text-2xl font-semibold mb-2 text-center">Perfil</h1>

    

    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        
      
      <% image_size = 'w-24 h-24' %>
      <% if @user.profile_icon.attached? %>
        <div class="profile-image-container flex items-center justify-center mb-4">
          <div class="border border-black rounded-full p-1">
            <%= image_tag @user.profile_icon, class: "profile-image rounded-full #{image_size}" %>
          </div>
        </div>
      <% else %>
        <div class="default-profile-image-container flex items-center justify-center mb-4">
          <div class="border border-black rounded-full p-1">
            <%= image_tag '/0fc41afaa7243b43cc64d086b60851db.png', alt: 'Default Profile Image', class: "default-profile-image rounded-full #{image_size}" %>
          </div>
        </div>
      <% end %>


      <div class="flex items-center justify-center">
        <%= link_to "Editar Perfil", edit_user_registration_path(@user), class: "px-4 py-2 rounded bg-yellow-400 hover:bg-yellow-300 text-white" %>
      </div>

      <div class="mb-4 mt-4">
        <label class="block text-gray-700 text-sm font-bold mb-2">Nombre:</label>
        <p><%= @user.name %> <%= @user.last_name %></p>
      </div>
      <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2">Correo Electr√≥nico:</label>
        <p><%= @user.email %></p>
      </div>
      <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2">Area:</label>
        <p><%= @area.name %></p>
      </div>
      <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2">Rol:</label>
        <% if @user.role == "teacher" %>
          <p>Profesor</p>
        <% elsif @user.role == "student" %>
          <p>Estudiante</p>
        <% end %>
      </div>

      <div class="mb-4">
        <% if @user.role == "teacher" %>
          <label class="block text-gray-700 text-sm font-bold mb-2">Proyectos Creados:</label>
          <ul>
            <% @user.projects.each do |project| %>
              <li class="flex items-center mt-2">
                <span class="mr-4">- <%= project.title %></span>
                <%= link_to "Ver Proyecto", project_path(project), class: "px-4 py-1 rounded bg-green-500 hover:bg-green-400 text-white" %>
              </li>
            <% end %>
          </ul>
        <% else %>
          <%= button_to "Ir a proyectos inscritos.", postulations_path, method: :get,  class: "px-4 py-1 rounded bg-green-500 hover:bg-green-400 text-white" %>
        <% end %>
      </div>

    </div>  <!-- <img src="/pikachu-intro.png" alt="Pikachu " width="100" height="100"> -->

  </div>
</div>
