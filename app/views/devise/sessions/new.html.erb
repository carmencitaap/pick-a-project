
<div class="flex flex-col justify-center items-center h-screen " style="background-image: url('/background.png');">
  <div class="w-1/3 bg-slate-100">
    <div class="flex flex-col justify-center items-center">
      <h1 class="text-5xl font-bold mt-10">PickAProject</h1>
      <h2 class="text-3xl font-bold mt-10">Ingresar</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field mb-2">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"rounded" %>
        </div>

        <div class="field mb-2">
          <%= f.label :password,"ContraseÃ±a" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class:"rounded" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me ,class:"rounded"%>
            <%= f.label :remember_me,"Recordar" %>
          </div>
        <% end %>

        <div class="actions flex flex-col justify-center items-center">
          <%= f.submit "Ingresar", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-4 mb-1" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>