<div class="flex justify-center items-center h-screen">
  <div class="w-1/3 bg-slate-100">

    <div style="margin-top:10px;margin-left:10px;">
      <%= link_to "Back", profile_path, class: "bg-orange-300 hover:bg-orange-500 text-white font-bold py-2 px-4 rounded" %>
    </div>

    <div class="flex flex-col justify-center items-center">

      <h2 class="text-3xl font-bold mt-10">Edit profile</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field mb-2">
          <%= f.label :profile_icon %><br />
          <%= f.file_field :profile_icon, class: "rounded" %>
        </div>
        
        <div class="field mb-2">
          <%= f.label :name %><br />
          <%= f.text_field :name, class: "rounded" %>
        </div>

        <div class="field mb-2">
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name, class: "rounded" %>
        </div>

        <div class="field mb-2">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded" %>
        </div>

        <div class="field mb-2">
          <%= f.label :profile_state %><br />
          <%= f.select :profile_state, options_for_select([["Available", "Available"], ["Busy", "Busy"], ["Don't disturb", "Dont_disturb"]], {selected: @user.profile_state}), class: "rounded" %>
        </div>
        
        <div class="actions flex flex-col justify-center items-center">
          <%= f.submit "Update", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-4 mb-1" %>
        </div>
      <% end %>

      
     
    </div>
  </div>
</div>

<div class="flex justify-center items-center">
  <div class="w-1/3 bg-slate-100">
    <div class="flex flex-col justify-center items-center">

       <h2 class="text-3xl font-bold mt-10"> Cancel my account ?</h2>

      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded mt-4 mb-1" %>
   </div>
  </div>
</div>