<div class="flex flex-col justify-center items-center h-screen " style="background-image: url('/background.png');">
  <div class="w-1/3 bg-slate-100">
    <div class="flex flex-col justify-center items-center">
      <h1 class="text-5xl font-bold mt-10">PickAProject</h1>
      <h2 class="text-3xl font-bold mt-10">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "rounded" %>
        </div>

        <div class="field">
          <%= f.label :role %><br />
          <%= f.collection_select(:role, User.roles.except("admin").keys, :to_s, :humanize, prompt: true, class:"rounded")%>
        </div>

        <div class="field">
          <%= f.label :area_id %><br />
          <%= f.collection_select(:area_id, Area.names.map { |key, value| [key, value.to_i] }, :last, :first, { prompt: true }, { class: "rounded" }) %>
        </div>


        <div class="field">
          <%= f.label :password %>
          <em>(8 characters minimum)</em>
          <br />
          <%= f.password_field :password, autocomplete: "new-password",class: "rounded" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "rounded" %>
        </div>

        <div class="actions flex flex-col justify-center items-center">
          <%= f.submit "Sign up", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-4 mb-1" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
